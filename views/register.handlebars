<div class="col-md-12">
<h2 class="page-header">Register</h2>
{{#if errors}}
    <button type="button" class="btn btn-danger" data-toggle="collapse" data-target="#demo">Warning: <span class="badge">{{errors.length}}</span></button>
    <div id="demo" class="collapse">
        <br>
    {{#each errors}}
        <ul class="text-danger">
           <li>{{msg}}</li>
        </ul>
    {{/each}}</div>
{{/if}}

<form method="post" action="/users/register" name="regForm" >
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name" name="name">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" placeholder="Username" name="username">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" ng-model="email">

    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password2">
    </div>

    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" ng-style="prStyle">
        </div>
    </div>
    <button type="submit" class="btn btn-default" ng-click="prStyle={width:progress}" ng-disabled="regForm.email.$error.email">Let me in!</button>
</form></div>